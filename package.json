{
  "name": "ai-email-sorter",
  "version": "1.0.0",
  "description": "AI-powered email sorting and management app",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
